<% comments.each do |comment| %>
<div class="panel panel-default">

  <div class="panel-body">
    	<p>
    		<%= link_to full_name(comment.user), user_timeline_path(comment.user.id) %> Said on 
    		<%= comment.created_at.strftime("%B %d, %Y") %>
    	</p>
    	<p>
    		<%= comment.body %>
    	</p>
  </div>

  <div class="panel-footer clearfix">
  	<% if object_owner_for_resource?(comment) %>
  		<%= link_to "Delete", user_comment_path(:user_id => current_user.id, :id => comment.id),  method: :delete %>
  	<% end %> 
  </div>

</div> <!-- end panel default -->
<% end %>