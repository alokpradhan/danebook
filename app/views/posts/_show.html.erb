<article class="panel panel-default comments">
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-2">
        <div class="thumbnail">
         <img src="/images/harry_potter_small.jpg">
        </div>
      </div> <!-- col-md-2 end -->
      <div class="col-md-7 poster">
      	<p> <%= link_to "#{post.user.first_name} #{post.user.last_name}", user_profile_path(post.user.id) %> </p>
        <p class="grey-text">Posted on <%= post.created_at.strftime("%B %d, %Y")%></p>
      </div>
    </div> <!-- row end -->
    <div class="row">
      <div class="col-md-12">
        <p><%= post.body %></p>
      </div>
    </div>
  </div>
    <div class="panel-footer clearfix">
      <div class="pull-right">
        <%= link_to "Delete", user_post_path(post.user.id, post.id), method: :delete  %>
      </div>
      <div class="pull-left">
        <a href="#">Like</a>
        <a href="#">Comment</a>
      </div>
    </div>
</article>